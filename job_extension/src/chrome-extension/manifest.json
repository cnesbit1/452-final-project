{
  "manifest_version": 3,
  "name": "The Joblessness Optimizer",
  "version": "1.0.0",
  "permissions": ["scripting", "activeTab", "storage", "sidePanel"],
  "action": {
    "default_icon": {
      "16": "public/j16x16.png",
      "48": "public/j48x48.png"
    }
  },
  "side_panel": {
    "default_path": "popup.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "host_permissions": ["http://localhost:8080/*", "http://127.0.0.1:8080/*"],
  "description": "This is the description of your extension",
  "icons": {
    "16": "public/j16x16.png",
    "32": "public/j32x32.png",
    "48": "public/j48x48.png",
    "192": "public/192.png"
  }
}
